  -DBUILD_opencv_python3=OFF \
  -DBUILD_opencv_python_bindings_generator=OFF \
  -DWITH_QT=OFF \
  -DWITH_COCOA=ON \
  -DWITH_GTK=OFF \
  -DWITH_FFMPEG=ON \
  -DWITH_JPEG=ON \
  -DWITH_PNG=ON \
  -DWITH_TIFF=ON ..